{
  "name": "mobile-fingerprint-doorbell",
  "version": "1.0.0",
  "description": "Mobile app for managing fingerprint doorbell sensors",
  "author": "Claudio Walser",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "electron:dev": "concurrently \"expo start --web --port 8081\" \"wait-on http://localhost:8081 && NODE_ENV=development electron electron/main.js\"",
    "electron:build-web": "expo export --platform web && node scripts/fix-electron-paths.js",
    "electron:build": "npm run electron:build-web && electron-builder",
    "electron:build-linux": "npm run electron:build-web && electron-builder --linux AppImage"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/native-stack": "^7.12.0",
    "bonjour-service": "^1.3.0",
    "expo": "~54.0.33",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-zeroconf": "^0.14.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "concurrently": "^9.1.0",
    "electron": "28.3.3",
    "electron-builder": "^26.0.0",
    "typescript": "~5.9.2",
    "wait-on": "^8.0.3"
  },
  "private": true,
  "build": {
    "appId": "com.fingerprint-doorbell.app",
    "productName": "Fingerprint Doorbell",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "electron/icons/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "electron/icons"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electron/icons/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/icons/icon.ico"
    }
  }
}
